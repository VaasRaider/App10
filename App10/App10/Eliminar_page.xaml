<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App10.Eliminar_page">
    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.ColumnSpan="1" x:Name="lblMensaje" Text ="{Binding Nombre}"  HorizontalOptions="Center" FontSize="40"></Label>
        <Entry Grid.Row="1" Grid.ColumnSpan="2" x:Name="txtNombre" Text ="{Binding Nombre}"></Entry>
        <Entry Grid.Row="2" Grid.ColumnSpan="2" x:Name="txtCorreo" Text ="{Binding Correo}"></Entry>
        <Button Grid.Row="3" Clicked="regresar" Text="Regresar" HorizontalOptions="Center"></Button>
    </Grid>
    
</ContentPage>